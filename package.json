{
  "name": "resume",
  "description": "My resume",
  "version": "1.0.0",
  "author": "Luke Karrys <luke@lukekarrys.com>",
  "dependencies": {
    "gray-matter": "^4.0.2",
    "lodash": "^4.17.19",
    "tailwindcss": "^1.2.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "autoprefixer": "^9.7.5",
    "cssnano": "^4.1.10",
    "detect-port-alt": "^1.1.6",
    "html-minifier": "^4.0.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.1",
    "livereload": "^0.9.1",
    "marked": "^0.8.2",
    "micro": "^9.3.4",
    "mkdirp": "^1.0.3",
    "netlify-cli": "^2.40.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.9.1",
    "postcss": "^8.2.10",
    "postcss-cli": "^7.1.0",
    "postcss-flexbugs-fixes": "^4.2.0",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "serve-handler": "^6.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "resume"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,md,css,json,html}": [
      "prettier --write"
    ]
  },
  "main": "index.js",
  "prettier": {
    "semi": false
  },
  "private": true,
  "repository": {
    "url": "git@github.com:lukekarrys/resume.git"
  },
  "scripts": {
    "build": "npm-run-all -s build:clean build:markdown build:css build:pdf",
    "build:clean": "rimraf build/",
    "build:css": "postcss src/styles.css -o build/styles.css",
    "build:markdown": "node build.js",
    "build:pdf": "node pdf.js",
    "deploy": "netlify deploy --dir=build --prod",
    "lint": "prettier --write '**/*.{js,md,css,json,html}'",
    "lint:ci": "npm run lint -- --list-different",
    "start": "npm-run-all -p start:**",
    "start:livereload": "livereload build",
    "start:nodemon": "nodemon --exec 'npm run build' -e 'js,md,html,css' --ignore build",
    "start:server": "node server.js build"
  }
}
